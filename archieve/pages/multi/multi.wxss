.mod_player{
    position: relative;
    z-index: 11;
    left: 0;
    top: 0;
    width: 100%;
    margin-bottom: 5px;
}
.mod_player:before{
    content: '';
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
}
.mod_player .player_video{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.player_error_layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .75);

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    z-index: 2;
    font-size: 15px;
}
.block {
    height: 40px;
    line-height: 40px;
    background: white;
    text-align: center;
    vertical-align: middle;
}